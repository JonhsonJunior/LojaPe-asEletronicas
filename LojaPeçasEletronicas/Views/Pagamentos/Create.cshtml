@model LojaPeçasEletronicas.Models.Pagamento

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Pagamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="paymentForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ValorTotal" class="control-label"></label>
                <input asp-for="ValorTotal" class="form-control" />
                <span asp-validation-for="ValorTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FormaDePagamento" class="control-label"></label>
                <input asp-for="FormaDePagamento" class="form-control" />
                <span asp-validation-for="FormaDePagamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusDoPagamento" class="control-label"></label>
                <input asp-for="StatusDoPagamento" class="form-control" />
                <span asp-validation-for="StatusDoPagamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" onclick="confirmPurchase(event)" />
            </div>
        </form>
    </div>
</div>

<div id="confirmationMessage" style="display: none;">
    Compra realizada com sucesso!
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function confirmPurchase(event) {
            event.preventDefault(); // Prevenir o envio padrão do formulário

            // Aqui você pode adicionar lógica para enviar o formulário via AJAX, se necessário

            // Mostrar a mensagem de confirmação
            document.getElementById('confirmationMessage').style.display = 'block';

            // Opcional: você pode enviar o formulário depois de mostrar a mensagem de confirmação
            document.getElementById('paymentForm').submit();
        }
    </script>
}